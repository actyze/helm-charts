# Development Secrets Template
# Copy this file to values-dev-secrets.yaml and fill in your actual secrets
# values-dev-secrets.yaml is in .gitignore and will not be committed

# ============================================================================
# DEVELOPMENT SECRETS TEMPLATE - REPLACE WITH YOUR CREDENTIALS
# ============================================================================
secrets:
  create: true  # Create secrets from values for development convenience
  
  # External LLM configuration
  externalLLM:
    apiKey: "your-perplexity-api-key-here"  # Get from https://www.perplexity.ai/settings/api
    
  # Trino credentials
  trino:
    username: "your-trino-username"  # Your Trino username
    password: "your-trino-password"  # Your Trino password
    
  # PostgreSQL database credentials - PRODUCTION-READY CREDENTIALS
  postgres:
    username: "nexus_service"           # Service account for Nexus application
    password: "your-secure-password"    # Generate strong password (min 16 chars, mixed case, numbers, symbols)

# ============================================================================
# DEVELOPMENT OVERRIDES - REQUIRED FOR TRINO CONNECTION
# ============================================================================
# Override Trino connection details (REQUIRED)
# Note: Update these for your environment
nexus:
  env:
    trino:
      host: "dashboard-trino"           # Local Trino for development
      port: 8080
      catalog: "postgres"               # PostgreSQL catalog in Trino
      schema: "demo_ecommerce"          # Default schema for demo queries
      ssl: false                        # Disable SSL for local development

schemaService:
  env:
    trino:
      host: "dashboard-trino"           # Local Trino for development  
      port: 8080
      catalog: "postgres"               # PostgreSQL catalog in Trino
      schema: "demo_ecommerce"          # Schema service will discover all schemas
      ssl: false                        # Disable SSL for local development
